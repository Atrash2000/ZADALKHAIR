@model ZADALKHAIR.Models.User

<div class="modal-header">
    <h3 class="modal-title text-body" id="exampleModalLongTitle">Emmployee Info</h3>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <ul>
        <li class="text-body"><i style="color: black !important;" class="fas fa-envelope mr-2"></i> @Model.UserEmail</li>
        <li class="my-4 text-body"><i style="color: black !important;" class="fas fa-phone-alt mr-2"></i> (@Model.USerCountryCode) @Model.UserPhoneNumber</li>
        <li class="text-body"><i style="color: black !important;" class="fas fa-clock mr-2"></i> @Model.UserCreateAt</li>
    </ul>
</div>

<div class="modal-footer">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="@Model.UserID"/>
        <input type="submit" class="btn btn-danger delete-btn" value="Delete">
    </form>
    <button type="button" class="btn" data-dismiss="modal">Close</button>
</div>

<script>
    $("input.delete-btn").hover(function () {
        if ('@TempData["AdminCount"]' == 1) {
            $(this).attr({
                "data-toggle": "tooltip",
                "data-placement": "left",
                style: "cursor: not-allowed",
                title: "Tooltip on left",
            });
        }
    });
</script>

@*style="pointer-events: none"*@
