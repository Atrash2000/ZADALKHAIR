@model ZADALKHAIR.Models.User

<div class="modal-header">
    <h3 class="modal-title" id="exampleModalLongTitle">Emmployee Info</h3>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <ul>
        <li><i class="fas fa-envelope mr-2"></i> @Model.UserEmail</li>
        <li class="my-4"><i class="fas fa-phone-alt mr-2"></i> (@Model.USerCountryCode) @Model.UserPhoneNumber</li>
        <li><i class="fas fa-clock mr-2"></i> @Model.UserCreateAt</li>
    </ul>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>


