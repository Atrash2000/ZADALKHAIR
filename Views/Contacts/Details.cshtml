@model ZADALKHAIR.Models.Contact
<!-- Modal -->
@section contactDetails {
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="row px-2" style="flex-direction: column">
                        <h3 class="modal-title" id="exampleModalLongTitle">@Model.ContactSubject</h3>
                        <span>@Model.ContactEmail</span><br />
                        <span>@Model.CreatedAt.ToString().Split(" ")[0]</span>
                    </div>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Model.ContactMassege
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

