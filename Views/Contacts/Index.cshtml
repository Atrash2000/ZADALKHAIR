@model List<ZADALKHAIR.Models.Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    int x = 0;
}

@{
    int? contactId;
}

<h2 class="text-white">Contact Us</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table text-center">
        <thead>
            <tr>
                <th>
                    <label asp-for="@Model??.ContactID"></label>
            
                </th>
                <th>
                    <label asp-for="@Model??.ContactName"></label>
              
                </th>
                <th>
                    <label asp-for="@Model??.ContactPhoneNumber"></label>
                
                </th>
                <th>
                    <label asp-for="@Model??.ContactSatuts"></label>
             
                </th>
                <th>
                    <label asp-for="@Model??.CreatedAt"></label>
                  
                </th>
                <th>
                    <label asp-for="@Model??.SatutsUpdate"></label>
    
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="thead-light">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ContactID
                    </td>
                    <td>
                        @item.ContactName
                    </td>
                    <td>
                        (@item.ContactCounrty) @item.ContactPhoneNumber
                    </td>
                    <td>
                        @item.ContactSatuts
                    </td>
                    <td>
                        @item.CreatedAt.ToString().Split(" ")[0]
                    </td>
                    <td>
                        @if (item.SatutsUpdate.ToString() == "1/01/0001 12:00:00 AM")
                        {
                            <p>Not Set</p>
                        }
                        else
                        {
                            @item.SatutsUpdate.ToString().Split(" ")[0];
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ContactID">Edit</a> |
                        <button type="button" asp-action="Details" asp-route-id="@item.ContactID">Details</button> |
                        <a asp-action="Delete" asp-route-id="@item.ContactID">Delete</a>
                    </td>
                </tr>

                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <div class="row px-2" style="flex-direction: column">
                                    <h3 class="modal-title" id="exampleModalLongTitle">@item.ContactSubject</h3>
                                    <span>@item.ContactEmail</span><br />
                                    <span>@item.CreatedAt.ToString().Split(" ")[0]</span>
                                </div>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                @item.ContactMassege
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
}

<!-- Modal -->

@section Scripts {
    <script>
        function displayContactMessage(contactId) {
            x = contactId;
            $.ajax({
                type: 'GET',
                url: '/Contacts/Details',
                data: { id: contactId },
                cache: false,
            });
        }
    </script>
}