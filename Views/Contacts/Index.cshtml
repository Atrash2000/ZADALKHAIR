@model IEnumerable<ZADALKHAIR.Models.Contact>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label asp-for="@Model??.ContactEmail" class="col-form-label"></label>                 
            </th>
            <th>
                <label asp-for="@Model??.ContactName" class="col-form-label"></label>
            </th>
            <th>
                <label asp-for="@Model??.ContactPhoneNumber" class="col-form-label"></label>
            </th>
            <th>
                <label asp-for="@Model??.ContactCounrty" class="col-form-label"></label>            
            </th>
            <th>
                 <label asp-for="@Model??.ContactSubject" class="col-form-label"></label>
            </th>
            <th>
                <label asp-for="@Model??.ContactMassege" class="col-form-label"></label>
            </th>
            <th>
                <label asp-for="@Model??.ContactSatuts" class="col-form-label"></label>
            </th>
            <th>
                <label asp-for="@Model??.CreatedAt" class="col-form-label"></label>
            </th>
            <th>
                <label asp-for="@Model??.SatutsUpdate" class="col-form-label"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.ContactEmail
            </td>
            <td>
                @item.ContactName
            </td>
            <td>
                @item.ContactPhoneNumber
            </td>
            <td>
                @item.ContactCounrty
            </td>
            <td>
                @item.ContactSubject
            </td>
            <td>
                @item.ContactMassege
            </td>
            <td>
                @item.ContactSatuts
            </td>
            <td>
                @item.CreatedAt
            </td>
            <td>
                @if (item.SatutsUpdate.ToString() == "1/01/0001 12:00:00 AM")
                {
                    <p>Not Set</p>
                }
                else
                {
                    @item.SatutsUpdate             
                }


            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContactID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ContactID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ContactID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
