@{
    ViewData["Title"] = "Zad Al-Khair Home";
}

<header>
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/home-hedder1.jpeg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/images/home-hedder2.jpeg" class="d-block w-100" alt="...">
            </div>
            @*<div class="carousel-item">
                    <img src="..." class="d-block w-100" alt="...">
                </div>*@
        </div>
    </div>

    <div class="py-5" style="background-color: #f4f4f4">
        <div class="container text-center">
            <h2 class="my-4">About Us</h2>
            <p style="font-size: 20px;">
                KNOX Technical Services LLC has emerged as one of the leading & innovative maintenance service providers in the Emirate of Dubai. KNOX provides maintenance solutions to residential and commercial properties developed by Emaar, Nakheel, Union Properties in the areas including but not limited to Meadows, Springs, Lakes, Emirates Hills, Arabian Ranches, The Villa, JBR, JLT, Jumeirah Islands, Jumeirah Park, Umm Suqeim, Al Wasl, Green Community, DIP, Motor City, Victory Heights, Palm Jumeirah, Jebel Ali Free Zone and more…
            </p>
            <a asp-action="AboutUs" asp-controller="Home" class="btn rounded px-4 py-2 hvr-shutter-in-horizontal my-4" style="border: 1px solid #2B2B2B; font-size: 15px;">FIND OUT MORE</a>
        </div>
    </div>
</header>

<section class="feedback-area py-5">
    <div style="position: absolute; width: 100%; height: 700px; left: 0; background-color: rgba(244, 244, 244, 0.8);"></div>
    <h2 class="text-center my-5" style="z-index: 1000 !important">What clients are saying</h2>

    <div class="swiper mySwiper px-5">
        <div class="swiper-wrapper">
            @foreach (var item in (List<FeedBack>)ViewData["feedback"])
            {
                <div class="swiper-slide">
                    <div class="testimonial-area">
                        <div class="testimonial-card">
                            <div class="px-25 py-20">
                                <div class="rate-area">
                                    <div class="row px-5">
                                        <span class="testimonial-date-created">@item.CreatedAt.ToShortDateString()</span>
                                        <div style="margin: 0px 0px 0px auto;">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                        </div>
                                    </div>
                                </div>
                                <p class="testimonial-card-text text-center">
                                    @item.Massege
                                </p>
                            </div>
                            <div class="person-info">
                                <div class="d-flex">
                                    <img src="https://knox.ae/wp-content/uploads/2021/06/Raheel-solkar-1016x1024.jpeg">
                                    <span class="person-name">@item.Name</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            </div>
        <div class="swiper-pagination"></div>
    </div>
</section>

@section Scripts {
    <script>
        var swiper = new Swiper(".mySwiper", {
            slidesPerView: 4,
            spaceBetween: 75,
            slidesPerGroup: 3,
            loop: true,
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
        });
    </script>
}